<div class="container py-3">
  <h2 class="text-center font-weight-bold">Khoá học của tôi</h2>
  <div class="row my-3">
   
    {{#each courses}}
    <div class="col-12 row my-3">
      <div class="col-4">
        <div class="card feature-courses__card">
          <a href="/courses/{{ this.slug }}">
            <img src="/{{ this.image }}" class="card-img-top feature-courses__img" alt="...">
          </a>
        </div>
      </div>
      <div class="col-8">
        <h5 class="card-title font-weight-bold">{{ this.name }}</h5>
        <p class="card-text">{{ this.description }}</p>
        <span class="feature-courses__author">
          <i class="fas fa-user-edit"></i>
          {{ this.author }}
        </span>
        <span>
          {{lessons.slug}}  
        </span>
      </div>
    </div>
    {{/each}}            
  </div>
  <div class="row">
    <div class="col-lg-12">
      {{{ paginateHelper pagination paginationClass="pagination pagination-sm justify-content-center" }}}
    </div>
  </div>
</div>



