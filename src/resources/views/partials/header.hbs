<nav class="navbar navbar-expand-lg navbar-dark header__menu-nav py-2" id="navbar_top">
  <div class="container">
    <a class="navbar-brand header__menu-logo mr-4" href="/">
      <img src="/img/Courseuni.png" alt="Courseuni">
