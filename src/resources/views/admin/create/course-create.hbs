<div class="container">
    <div class="mt-4">
    <h3>Đăng khoá học</h3>
    <form method="POST" action="/admin/courses/store" enctype="multipart/form-data">
        <div class="form-group">
            <label for="name">Tên khoá học</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="description">Mô tả khoá học</label>
            <input type="text" class="form-control" id="description" name="description">
        </div>
        <div class="form-group">
            <label for="author">Tác giả</label>
            <input type="text" class="form-control" id="author" name="author">
        </div>
        <div class="form-group">
            <label for="category">Danh mục</label>
            <select class="form-control" name="category" id="category">
                {{#each categories}}
                <option value="{{ this._id }}"> {{this.name}}</option>
                {{/each}}
            </select>
        </div>

        <div class="form-group">
            <label for="image">Hình ảnh</label>
            <input type="file" class="form-control" id="image" name="image">
        </div>



        <button type="submit" class="btn btn-primary">Thêm khoá học</button>
    </form>
</div>
</div>