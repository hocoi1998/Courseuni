<div class="main-content">
  <div class="section__content section__content--p30">
    <div class="container-fluid">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header">
            <strong>THÊM BÀI TẬP</strong>
          </div>
          <form action="store" method="POST" class="form-horizontal" id="needs-validation">
            <div class="card-body card-block">
              <div class="row form-group">
                <div class="col col-md-3">
                  <label for="question" class=" form-control-label">Câu hỏi<sup class="text-danger">*</sup></label>
                </div>
                <div class="col-12 col-md-9">
                  <textarea name="question" id="question" rows="6" placeholder="Nhập câu hỏi"
                    class="form-control"></textarea>
                </div>
              </div>
              <div class="row form-group answer-box">
                <div class="col col-md-3">
                  <label class=" form-control-label">Đáp án</label>
                </div>
                <div class="col-12 col-md-9">
                  <input type="checkbox" name="correct" class="form-check-input">
                  <input type="text" name="answer" class="form-control answer">
                </div>
              </div>
              <div class="row form-group answer-box">
                <div class="col col-md-3">
                </div>
                <div class="col-12 col-md-9">
                  <input type="checkbox" name="correct" class="form-check-input">
                  <input type="text" name="answer" class="form-control answer">
                </div>
              </div>
              <div class="row form-group answer-box">
                <div class="col col-md-3">
                </div>
                <div class="col-12 col-md-9">
                  <input type="checkbox" name="correct" class="form-check-input">
                  <input type="text" name="answer" class="form-control answer">
                </div>
              </div>
              <div class="row form-group answer-box">
                <div class="col col-md-3">
                </div>
                <div class="col-12 col-md-9">
                  <input type="checkbox" name="correct" class="form-check-input">
                  <input type="text" name="answer" class="form-control answer">
                </div>
              </div>

              <div class="row form-group">
                <div class="col col-md-3"></div>
                <div class="col-12 col-md-9">
                  <i class="fa fa-plus-circle btn-add" style="font-size:30px"></i>
                </div>
              </div>
            </div>
            <input type="text" id="lessonSlug" name="lessonSlug" value="{{ lessonSlug }}" hidden>
            <div class="card-footer">
              <button type="submit" class="btn btn-primary btn-sm btn-submit">
                <i class="fa fa-dot-circle-o"></i> Thêm
              </button>
            </div>
        </div>
        </form>
      </div>
    </div>
  </div>
</div>
</div>


<script>
  window.addEventListener('DOMContentLoaded', function () {
    $('.btn-add').click(function () {
      let html = `
      <div class="row form-group answer-box">
                <div class="col col-md-3">                 
                </div>
                <div class="col-12 col-md-9">
                  <input type="checkbox" name="correct" class="form-check-input">
                  <input type="text" name="answer" class="form-control answer">
                </div>                
              </div>
      `
      $(html).insertAfter(".answer-box:last");
    })
    $("#needs-validation").validate({
      rules: {
        question: 'required',
      },
      messages: {
        question: 'Vui lòng nhập câu hỏi!',
      }
    })

    $('.btn-submit').click(function () {
      let answer = $('.answer');
      let correct = $('.form-check-input');

      for (let i = 0; i < answer.length; i++) {
        if (answer[i].value === '') {
          correct[i].remove();
          answer[i].remove();
        } else {
          correct[i].value = answer[i].value;
        }
      }

    });

    $(document).ready(function () {
      $('#question').summernote( {
        tabsize: 2,
        height: 150,
        paddingLeft: 50,
         toolbar: [
          ['style', ['style']],
          ['font', ['bold', 'underline', 'clear']],
          ['color', ['color']],
          ['para', ['ul', 'ol', 'paragraph']],
          ['table', ['table']],
          ['insert', ['link']],
          ['view', ['codeview']]
        ]
      });
      
    });

  })

</script>