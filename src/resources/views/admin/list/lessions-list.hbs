<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="col-lg-12">
                <form method="POST" action="/admin/courses/{{ courseSlug }}/handle-form-actions" name="container-form">
                    <a href="/admin/courses/{{ courseSlug }}" class="title-5">Quản lý bài học</a>
                    <table class="table table-data2">
                        <tbody style="background-color: transparent">
                            <tr>
                                <td>
                                    <label class="au-checkbox">
                                        <input id="checkbox-all" type="checkbox">
                                        <span class="au-checkmark"></span>
                                    </label>
                                </td>
                                <td colspan="2">
                                    <select name="action" id="select" class="form-control" name="action" required>
                                        <option value="">-- Hành động --</option>
                                        <option value="delete">Xoá</option>
                                    </select>
                                </td>
                                <td>
                                    <button class="au-btn au-btn-icon au-btn--green au-btn--small check-all-submit-btn"
                                        disabled>
                                        Thực hiện
                                    </button>
                                </td>
                                <td>
                                    <div class="table-data-feature">
                                        <a href="/admin/trash/courses/{{courseSlug}}" class="item position-relative"
                                            data-toggle="tooltip" data-placement="top" title=""
                                            data-original-title="Thùng rác ({{ deletedCount }})">
                                            <i class="zmdi zmdi-delete text-danger" style="font-size:40px;"></i>
                                            <span class="text-white position-absolute text-center"
                                                style="width:23.36px;bottom:2px;right:3px;">{{ deletedCount }}</span>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="table-responsive table-responsive-data2">
                        <table class="table table-data2">
                            <thead>
                                <tr>
                                    <th>

                                    </th>
                                    <th>Tên bài học</th>
                                    <th>Video ID</th>
                                    <th>Thời gian tạo</th>
                                    <th>Cập nhật cuối</th>
                                    <th>
                                        <a href="/admin/courses/{{ courseSlug }}/create"
                                            class="au-btn au-btn-icon au-btn--blue au-btn--small px-5">
                                            Thêm
                                        </a>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each lessions }}
                                <tr class="tr-shadow">
                                    <td>
                                        <label class="au-checkbox">
                                            <input type="checkbox" name="checkSlugs[]" value="{{ this.slug }}">
                                            <span class="au-checkmark"></span>
                                        </label>
                                        <span style="position:relative;right:20px;top:-3px">{{ sum @index 1}}</span>
                                    </td>
                                    <td>
                                        <span>{{ this.name }}</span>
                                    </td>
                                    <td class="desc" style="min-width:150px">{{ this.videoId }}</td>
                                    <td>{{ momentHM this.createdAt }}</td>
                                    <td>{{ momentHM this.updatedAt }}</td>
                                    <td>
                                        <div class="table-data-feature">
                                            <a href="/admin/courses/{{ this.courseSlug }}/{{ this.slug }}" class="item" data-toggle="tooltip"
                                                data-placement="top" title="Quản lý bài tập"
                                                data-original-title="Quản lý bài tập">
                                                <i class="zmdi zmdi-calendar-note text-danger"></i>
                                            </a>
                                            <a href="/admin/courses/{{this.courseSlug}}/{{this.slug}}/edit" class="item"
                                                data-toggle="tooltip" data-placement="top" title="Sửa"
                                                data-original-title="Sửa">
                                                <i class="zmdi zmdi-edit text-info"></i>
                                            </a>
                                            <a href="" class="item" data-placement="top" title="Xoá"
                                                data-original-title="Xoá" data-toggle="modal"
                                                data-target="#delete-modal" data-slug="{{ this.slug }}">
                                                <i class="zmdi zmdi-delete text-dark"></i>
                                            </a>
                                    </td>
                                </tr>
                                <tr class="spacer"></tr>
                                {{/each}}
                                <tr>
                                    {{#if lessions}}
                                    <td colspan="6">
                                        {{{ paginateHelper pagination paginationClass="pagination pagination-sm
                                        justify-content-center" }}}
                                    </td>
                                    {{else}}
                                    <td colspan="6" style="text-align: center">
                                        Không có bài học nào, <a href="/admin/courses/{{ courseSlug }}/create">Thêm ngay</a>
                                    </td>
                                    {{/if}}
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <!-- END DATA TABLE -->
                </form>
            </div>
        </div>
    </div>
</div>

{{!-- Confirm delete --}}
<div id="delete-modal" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xoá bài học</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Bạn chắc chắn muốn xoá bài học này?</p>
            </div>
            <div class="modal-footer">
                <button id="btn-delete" type="button" class="btn btn-danger">Xoá bỏ</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Huỷ</button>
            </div>
        </div>
    </div>
</div>

{{!-- Delete hidden form --}}
<form id="delete-form" method="POST"></form>

<script>

    document.addEventListener('DOMContentLoaded', function () {
        var slug;
        var btnDelete = document.getElementById('btn-delete');
        var containerForm = $['form[name="container-form"'];
        var deleteForm = document.getElementById('delete-form');
        var checkboxAll = $('#checkbox-all');
        var itemCheckbox = $('input[name="checkSlugs[]"]');
        var checkAllSubmitBtn = $('.check-all-submit-btn');

        // When dialog confirm clicked
        $('#delete-modal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget)
            slug = button.data('slug')
        });

        // When delete button clicked
        btnDelete.onclick = function () {
            deleteForm.action = `/admin/courses/{{ courseSlug }}/${slug}/delete?_method=DELETE`;
            deleteForm.submit();
        }

        // Checkbox all changed
        checkboxAll.change(function () {
            var isCheckedAll = $(this).prop('checked');
            itemCheckbox.prop('checked', isCheckedAll);
            renderCheckAllSubmitBtn();
        });

        // item checkbox changed
        itemCheckbox.change(function () {
            var isCheckedAll = itemCheckbox.length === $('input[name="checkSlugs[]"]:checked').length;
            checkboxAll.prop('checked', isCheckedAll);
            renderCheckAllSubmitBtn().click(function (e) {
                e.preventDefault();
            });
        });

        // Re-render check all submit button
        function renderCheckAllSubmitBtn() {
            var checkedCount = $('input[name="checkSlugs[]"]:checked').length;
            if (checkedCount) {
                checkAllSubmitBtn.attr('disabled', false);
            } else {
                checkAllSubmitBtn.attr('disabled', true);
            }
        }

    });


</script>