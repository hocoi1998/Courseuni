<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="col-lg-12">
                <div class="user-data m-b-30">
                    <h3 class="title-3 m-b-30">
                        <i class="zmdi zmdi-account-calendar"></i>Quản lý tài khoản
                    </h3>

                    <div class="table-responsive table-data" style="height:auto">
                        <table class="table">
                            <thead>
                                <tr>
                                    <td>STT</td>
                                    <td>Họ và tên</td>
                                    <td>Số điện thoại</td>
                                    <td>Nhóm quyền</td>
                                    <td>Cập nhật gần nhất</td>
                                    <td>Sửa</td>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each users}}
                                <tr>
                                    <td>
                                        {{ sum @index 1}}
                                    </td>
                                    <td>
                                        <div class="table-data__info">
                                            <h6>{{ this.name }}</h6>
                                            <span>
                                                <a href="#">{{ this.email }}</a>
                                            </span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="table-data__info">
                                            <span>
                                                {{ this.phone }}
                                            </span>
                                        </div>
                                    </td>
                                    <td>
                                        {{#if this.isAdmin }}
                                        <span class="role admin">Quản trị viên</span>
                                        {{else}}
                                        <span class="role user">Học viên</span>
                                        {{/if}}
                                    </td>
                                    <td>
                                        <div class="table-data__info">
                                            <span>
                                                {{ momentH this.updatedAt }}
                                            </span>
                                            <h6>{{ momentD this.updatedAt }}</h6>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="table-data-feature" style="justify-content:flex-start">
                                            <a href="/admin/users/{{this._id}}/edit" class="item" data-toggle="tooltip"
                                                data-placement="top" title="" data-original-title="Edit">
                                                <i class="zmdi zmdi-edit text-info"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    <div class="user-data__footer">
                        {{{ paginateHelper pagination paginationClass="pagination pagination-sm justify-content-center"
                        }}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>