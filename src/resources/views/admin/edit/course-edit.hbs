<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong>SỬA KHOÁ HỌC</strong>
                    </div>
                    <form method="POST" action="/admin/courses/{{ course.slug }}/update"
                        class="form-horizontal" id="needs-validation" enctype="multipart/form-data">
                        <div class="card-body card-block">
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="name" class=" form-control-label">Tên khoá học <sup
                                            class="text-danger">*</sup></label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <input type="text" id="name" name="name" placeholder="Nhập tên khoá học"
                                        class="form-control" value="{{ course.name }}">
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="description" class="form-control-label">Mô tả khoá học</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <textarea name="description" id="description" rows="4" placeholder="Nội dung..."
                                        class="form-control">{{ course.description }}</textarea>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="author" class="form-control-label">Tác giả</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <input type="text" id="author" name="author" placeholder="" class="form-control"
                                        value="{{ course.author }}">
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="category" class="form-control-label">Danh mục</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <select name="category" id="category" class="form-control">
                                        <option value="{{ course.category._id }}">{{course.category.name}}</option>
                                        {{#each categories}}
                                        <option value="{{ this._id }}"> {{this.name}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="image" class=" form-control-label">Hình ảnh</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <div class="form-control">
                                        <img id="imgPreview" src="/{{ course.image }}" alt="" class="d-flex mx-auto"
                                            style="max-width:100%; max-height: 300px;object-fit:cover">
                                        <input type="file" id="img" class="my-2 w-100 form-control-file ipf" name="image">
                                        <input type="text" class="my-2 w-100 form-control lblImg" name="imageOld" value="{{ course.image }}" hidden>
                                      
                                    </div>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="obtain" class="form-control-label">Kiến thức đạt được</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <textarea name="obtain" id="obtain" rows="9"
                                        placeholder="Thêm nhiều kiến thức bằng cách xuống dòng"
                                        class="form-control">{{ obtain }}</textarea>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button id="btn-save" type="submit" class="btn btn-primary btn-sm">
                                <i class="fa fa-dot-circle-o"></i> Lưu lại
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    document.addEventListener('DOMContentLoaded', function () {
        $("#needs-validation").validate({
            rules: {
                name: 'required',
            },
            messages: {
                name: 'Vui lòng điền tên khoá học!',
            }
        });
        
      

        img.onchange = evt => {
            const [file] = img.files
            if (file) {
                imgPreview.src = URL.createObjectURL(file)
            }
        }
    })

</script>


