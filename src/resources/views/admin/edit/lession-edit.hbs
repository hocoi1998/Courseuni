<div class="mt-4">
    <div class="row">
        <h3 class="col-6">Sửa bài học</h3>
        <h3 class="col-6">
            <a href="/admin/courses/{{ lession.courseSlug }}/{{ lession.slug }}">Quản lý bài tập</a>
        </h3>
    </div>
    <form class="mt-4" method="POST" action="/admin/courses/{{ lession.courseSlug }}/{{ lession.slug }}/update?_method=PUT">
        <div class="form-group">
            <label for="name">Tên bài học</label>
            <input type="text" class="form-control" value="{{ lession.name }}" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="videoId">Video ID</label>
            <textarea class="form-control" id="videoId" name="videoId">{{ lession.videoId }}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>