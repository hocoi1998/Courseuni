<div class="container">
    <div class="mt-4">
    <div class="row">
        <h3 class="col-6">Sửa bài tập</h3>

    </div>
    <form class="mt-4" method="POST" action="update?_method=PUT">
        <div class="form-group">
            <label for="name">Tên bài tập</label>
            <input type="text" class="form-control" value="{{ exercise.name }}" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="question">Câu hỏi</label>
            <textarea class="form-control" id="question" name="question">{{ exercise.question }}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>
</div>