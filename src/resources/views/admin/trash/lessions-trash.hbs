<div class="container">
    <form method="POST" action="/admin/courses/{{ courseSlug }}/handle-form-actions" name="container-form" class="mt-4">
    <div>
        <a href="/admin/courses/{{ courseSlug }}">Danh sách bài học</a>
    </div>
    <h2>bài học đã xoá</h2>
    <div class="mt-4 d-flex align-items-center">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="checkbox-all">
            <label class="form-check-label" for="checkbox-all">
                Chọn tất cả
            </label>
        </div>

        <select name="action" class="form-control form-control-sm checkbox-select-all-options" required>
            <option value="">-- Hành động --</option>
            <option value="restore">Khôi phục</option>
            <option value="forceDelete">Xoá vĩnh viễn</option>
        </select>
        <button class="btn btn-primary ml-4 check-all-submit-btn" disabled>Thực hiện</button>
    </div>
    <table class="table mt-4">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">STT</th>
                <th scope="col">Tên bài học {{{ sortable 'name' _sort }}}</th>
                <th scope="col">Video ID {{{ sortable 'videoId' _sort }}}</th>
                <th scope="col">Thời gian xoá {{{ sortable 'deletedAt' _sort }}}</th>
                <th scope="col">

                </th>
                <th scope="col">

                </th>
            </tr>
        </thead>
        <tbody>
            {{#each lessions}}
            <tr>
                <td>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="checkSlugs[]" value="{{ this.slug }}">
                    </div>
                </td>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{this.name}}</td>
                <td>{{this.videoId}}</td>
                <td>{{this.deletedAt}}</td>
                <td>
                    <a href="" class="btn btn-success btn-restore" data-slug="{{ this.slug }}">Khôi phục</a>
                    <a href="" class="btn btn-danger" data-toggle="modal" data-target="#delete-modal"
                        data-slug="{{ this.slug }}">Xoá vĩnh viễn</a>
                </td>
            </tr>
            {{else}}
            <tr>
                <td colspan="6" class="text-center">
                    Thùng rác trống
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</form>
{{!-- Confirm delete --}}
<div id="delete-modal" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xoá khoá học</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Hành động này không thể khôi phục. Bạn vẫn muốn xoá khoá học này?</p>
            </div>
            <div class="modal-footer">
                <button id="btn-delete" type="button" class="btn btn-danger">Xoá bỏ</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Huỷ</button>
            </div>
        </div>
    </div>
</div>

<form id="delete-form" method="POST"></form>
<form id="restore-form" method="POST"></form>

<script>

    document.addEventListener('DOMContentLoaded', function () {
        var slug;
        var btnDelete = document.getElementById('btn-delete');
        var deleteForm = document.getElementById('delete-form');
        var restoreForm = document.getElementById('restore-form');
        var restoreBtn = $('.btn-restore');

        var containerForm = $['form[name="container-form"'];
        var deleteForm = document.getElementById('delete-form');
        var checkboxAll = $('#checkbox-all');
        var itemCheckbox = $('input[name="checkSlugs[]"]');
        var checkAllSubmitBtn = $('.check-all-submit-btn');

        // When dialog confirm clicked
        $('#delete-modal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget)
            slug = button.data('slug')
        });

        // When delete button clicked
        btnDelete.onclick = function () {
            deleteForm.action = `/admin/trash/courses/{{ courseSlug }}/${slug}/forceDelete?_method=DELETE`;
            deleteForm.submit();
        }

        // Restore button clicked
        restoreBtn.click(function (e) {
            e.preventDefault();
            slug = $(this).data('slug')
            restoreForm.action = `/admin/trash/courses/{{ courseSlug }}/${slug}/restore?_method=PATCH`;
            restoreForm.submit();
        });

        // Checkbox all changed
        checkboxAll.change(function () {
            var isCheckedAll = $(this).prop('checked');
            itemCheckbox.prop('checked', isCheckedAll);
            renderCheckAllSubmitBtn();
        });

        // item checkbox changed
        itemCheckbox.change(function () {
            var isCheckedAll = itemCheckbox.length === $('input[name="checkSlugs[]"]:checked').length;
            checkboxAll.prop('checked', isCheckedAll);
            renderCheckAllSubmitBtn().click(function (e) {
                e.preventDefault();
            });
        });

        // Re-render check all submit button
        function renderCheckAllSubmitBtn() {
            var checkedCount = $('input[name="checkSlugs[]"]:checked').length;
            if (checkedCount) {
                checkAllSubmitBtn.attr('disabled', false);
            } else {
                checkAllSubmitBtn.attr('disabled', true);
            }
        }
    });

</script>
</div>