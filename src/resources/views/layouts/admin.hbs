    <!-- pagination js -->
    <script>
        window.addEventListener('DOMContentLoaded', (event) => {
            $('.pagination li').addClass('page-item');
            $('.pagination li a').addClass('page-link');


            const el = $('.list-unstyled.navbar__list li a');
            const url = window.location.href.split('/').slice(4,5).join('');
            
            for(let i = 0; i < el.length; i++){
                let current = (el[i].getAttribute('href').split('/').slice(-1).join(''));
                if( current === url) {
                    $('.list-unstyled.navbar__list li')[i].classList.add('active');
                } else if ( current === window.location.href.split('/').slice(-1).join('')) {
                    $('.list-unstyled.navbar__list li')[i].classList.add('active');
                }
            }

        });
    </script>

