<!-- Sign up form -->
<section class="signup">
  <div class="container">
    <div class="row signup-content">
      <div class="signup-form">
        <h2 class="form-title">Đăng ký</h2>
        <form method="POST" class="register-form" id="register-form">
          <div class="form-group">
            <label for="name"><i class="fas fa-user"></i></label>
            <input type="text" name="name" id="name" placeholder="Họ tên" value="{{ values.name }}" required />

          </div>
          <div class="form-group">
            <label for="email"><i class="fas fa-envelope"></i></label>
            <input type="email" name="email" id="email" placeholder="Email" value="{{ values.email }}" required />
            <p class="text-danger msg">{{ errors.emailMsg }}</p>
          </div>
          <div class="form-group">
            <label for="pass"><i class="fas fa-lock"></i></label>
            <input type="password" name="password" id="pass" placeholder="Mật khẩu" value="{{ values.password }}"
              required />
            <p class="text-danger msg">{{ errors.passMsg }}</p>
          </div>
          <div class="form-group">
            <label for="re-pass"><i class="fas fa-lock"></i></label>
            <input type="password" name="rePassword" id="re_pass" placeholder="Nhập lại mật khẩu"
              value="{{ values.rePassword }}" required />
            <p class="text-danger msg">{{ errors.rePassMsg }}</p>
          </div>
          <div class="form-group agree-term-form">
            <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" required />
            <label for="agree-term" class="label-agree-term">Tôi đồng ý với tất cả <a href="term" class="term-service">Điều
                khoản dịch vụ</a></label>
          </div>
          <div class="form-group form-button">
            <input type="submit" name="signup" id="signup" class="form-submit btn btn-primary" value="Đăng ký" />
          </div>
        </form>
      </div>
      <div class="signup-image">
        <figure><img src="/img/signup-image.jpg" alt="sing up image"></figure>
        <a href="/login" class="signup-image-link">Bạn đã có tài khoản?</a>
      </div>
    </div>
  </div>
</section>

{{#if successfully }}
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" id="btnLaunch" data-toggle="modal" data-target="#exampleModal" hidden>
  Launch modal
</button>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Đăng ký thành công</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Đăng nhập ngay để tham gia các khoá học miễn phí!
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
        <a href="/login" class="btn btn-primary">Đăng nhập</a>
      </div>
    </div>
  </div>
</div>

<script>
  window.onload = function () {
    document.getElementById('btnLaunch').click()
  }
</script>
{{/if}}